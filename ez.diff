+	cr = GB(current, 16, 8);
+	cg = GB(current, 8,  8);
+	cb = GB(current, 0,  8);
+	// if the original is a grey tone, don't recolour  
+	if ( (abs(cg - cr) < 5) && ( abs(cb - cr) < 5)){
+		return current;
+	}
+	if (cr < cg) Swap(cr,cg);
+	if (cg < cb) Swap(cg,cb);
+	if (cr < cg) Swap(cr,cg);
+	if (r>g) {
+		if(r>b) {
+			r = cr;
+			if(b>g) {
+				b = cg;
+				g = cb;
+			}	
+			else {
+				g = cg;
+				b = cb;
+			}
+		}	
+		else {
+			b = cr;
+			r = cg;
+			g = cb;
+		}
+	}	
+	else {
+		if(r>b) {
+			g = cr;
+			r = cg;
+			b = cb;
+		}
+		else {
+			if(b>g) {
+				b = cr;
+				g = cg;
